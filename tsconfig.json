{
  "compilerOptions": {
    "target": "es2016", 
    /* Modules */
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["build"]
}
